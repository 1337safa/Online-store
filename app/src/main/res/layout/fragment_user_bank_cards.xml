<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.all_content.user_profile.user_bank_cards.FragmentUserBankCards"
    android:background="@color/back"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_all_user_bank_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/bank_card_without_check_box_rcv"
        tools:itemCount="5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_add_bank_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@drawable/ripple_effect"
        android:drawableEnd="@drawable/ic_next"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="@string/add"
        android:theme="@style/title_style" />

</LinearLayout>